<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.majomi.zeninstants"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
	<uses-permission android:name="android.permission.VIBRATE"/>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    
	<uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HistoricalActivity"
            android:label="@string/title_activity_historial" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TabsActivity"
            android:label="@string/title_activity_tabs" >
        </activity>
        <activity
            android:name=".MessageImageActivity"
            android:label="@string/title_activity_message_image"
            android:theme="@style/ZenInstant.Dialog" >
        </activity>
        <activity
            android:name=".MessageTextActivity"
            android:label="@string/title_activity_tabs"
            android:theme="@style/ZenInstant.Dialog" >
        </activity>
        <activity
            android:name=".MessageVideoActivity"
            android:label="@string/title_activity_message_video" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MessageSoundActivity"
            android:label="@string/title_activity_message_sound" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.majomi.zeninstants.MessagesService" />

        <activity
            android:name=".MessageActivity"
            android:label="@string/title_activity_message" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    
</manifest>
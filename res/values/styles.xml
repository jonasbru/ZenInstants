<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Black" />
    
    <style name="ZenInstant" >
		<item name="android:colorForeground">#fff</item>
	</style>
	
    
    <style name="ZenInstant.Message" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    	<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/fuzzy</item>
		
	</style>
	
    <style name="ZenInstant.Message.Title" parent="@android:style/TextAppearance.DialogWindowTitle">
		<item name="@android:gravity">center_horizontal</item>
		<item name="@android:style/TextAppearance.Large"></item>
	</style>
    
    <style name="ZenInstant.Message.TextFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00DC00</item>
        <item name="android:typeface">normal</item> 
    </style>
    
    <style name="ZenInstant.Planning.ToggleButton" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    	<item name="android:onClick">onToggleClicked</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:background">@drawable/selectorplanner</item>    
		
	</style>
    
    <style name="ZenInstant.Settings.ButtonDay" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">48dp</item>
    	<item name="android:onClick">onClicked</item>
        <item name="android:background">@drawable/settingsbuttonday</item>
    </style>
        
    <color name="fuzzy">#60000000</color>
    <color name="messageBackground">#0f5366</color>
    <color name="dark_green">#669900</color>
    <color name="dark_red">#CC0000</color>
    <color name="light_red">#FF4444</color>
    <color name="light_green">#99CC00</color>
    <color name="dark_orange">#FF8800</color>
    <color name="light_orange">#FFBB33</color>

    
    
</resources>
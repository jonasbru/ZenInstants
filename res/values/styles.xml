<resources>

    <style name="AppTheme" parent="android:Theme.Black" />
    
    <style name="ZenInstant">
		<item name="android:colorForeground">#fff</item>
	</style>
	
    <style name="ZenInstant.Dialog" parent="@android:style/Theme.Dialog">
    	<item name="android:windowTitleStyle">@style/ZenInstant.Dialog.Title</item>
    </style>
    
    <style name="ZenInstant.Message">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
		<item name ="android:windowBackground">@color/fuzzy</item>
		<item name="android:windowNoTitle">true</item>
	</style>
	
		
	<style name="ZenInstant.Dialog.Title" parent="@android:style/TextAppearance.DialogWindowTitle">
		<item name="android:gravity">center_horizontal</item>
	</style>
    
    <color name="fuzzy">#7F000000</color>


</resources>
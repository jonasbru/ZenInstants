<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Black" />

    <!-- Style to apply as a theme for message (item window*) -->
    <style name="ZenInstant.Message" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/fuzzy</item>
    </style>

    <style name="ZenInstant.Message.WindowPadding" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:padding">16dp</item>
    </style>

    <style name="ZenInstant.Message.Container" parent="@style/Theme.Sherlock.NoActionBar">

        <!-- <item name="android:background">@color/abs__bright_foreground_disabled_holo_dark</item> -->
        <item name="android:background">@drawable/window_msg</item>
    </style>

    <style name="ZenInstant.Message.ScrollView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:minWidth">280dp</item>
        <!-- Hack for button with small msg -->
    </style>

    <style name="ZenInstant.Message.Title" parent="@style/DialogWindowTitle.Sherlock">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ZenInstant.Message.ButtonBar">
        <item name="android:background">@null</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="ZenInstant.Message.Text" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:textColor">@android:color/secondary_text_dark_nodisable</item>
    </style>

    <style name="ZenInstant.Planning.ToggleButton" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:onClick">onToggleClicked</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:background">@drawable/selectorplanner</item>
    </style>

    <style name="ZenInstant.Settings.ButtonDay" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:onClick">onClicked</item>
        <item name="android:background">@drawable/settingsbuttonday</item>
    </style>

    <style name="ZenInstant.Historial.favouritebutton" parent="@style/Theme.Sherlock.NoActionBar">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/rating_favorite</item>
    </style>
    <color name="fuzzy">#60000000</color>
    <color name="messageBackground">#0f5366</color>
    <color name="lue_light">@color/abs__holo_blue_light</color>
    <color name="red">#00FF00</color>
    <color name="dark_green">#669900</color>
    <color name="dark_red">#CC0000</color>
    <color name="light_red">#FF4444</color>
    <color name="light_green">#99CC00</color>
    <color name="dark_orange">#FF8800</color>
    <color name="light_orange">#FFBB33</color>
    <color name="gray">#F4F4F4</color>
    <color name="light_gray">#55C4C4C4</color>
    <color name="dark_gray">#55ADADAD</color>

</resources>